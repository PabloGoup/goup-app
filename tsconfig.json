{
  "compilerOptions": {
    
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
   // "types": ["@vercel/node"],
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
      
    }
  },
  "include": ["src", "vite.config.ts", "public/api"],
  "exclude": ["api"]  
}